<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".About">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF9800">

        <ImageView
            android:id="@+id/imageAbout"
            android:layout_width="214dp"
            android:layout_height="150dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="96dp"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/classpacket_logo"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="118dp"
            android:layout_height="38dp"
            android:layout_marginStart="146dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="147dp"
            android:text="ABOUT"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageAbout" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="361dp"
            android:layout_height="157dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="Class Parent is a mobile application developed to identify the traffic coming in the mobile phone. The application is designed to display the traffic of packets that comes in the mobile phone."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textdeveloper"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:layout_marginStart="146dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="147dp"
            android:text="DEVELOPERS"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.583"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="361dp"
            android:layout_height="157dp"
            android:text="Class Parent is a mobile application developed to identify the traffic coming in the mobile phone. The application is designed to display the traffic of packets that comes in the mobile phone."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="493dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>